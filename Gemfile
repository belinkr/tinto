source :rubygems

group :production do
  gem 'i18n'
  gem 'json'
  gem 'sanitize'
  gem 'uuidtools'
  gem 'aequitas'
  gem 'redis'
end

group :development do
  gem 'warbler', git: 'https://github.com/vanyak/warbler.git'
end

group :test do
  gem 'guard'
  gem 'guard-minitest'
  gem 'minitest', require: 'minitest/autorun'
  gem 'rb-fsevent'
end

